    <style>
        .notification {
            display: none;
            background: linear-gradient(131deg, #25baff 0%, #099eff 100%);
            color: white;
            padding: 10px;
            border-radius: 5px;
            position: fixed;
            top: 20%;
            left: 50%;
            /* transform: translate(-50%, -50%); */
